<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#228B22">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen de la mascota -->
        <ImageView
            android:id="@+id/imgMascota"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Imagen de la mascota"
            android:scaleType="centerCrop"
            android:src="@drawable/mascota_default1" /> <!-- Descripci칩n accesible -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre de la mascota -->
            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Nombre de la mascota"
                android:text="Nombre:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" /> <!-- Texto blanco -->

            <!-- Edad de la mascota -->
            <TextView
                android:id="@+id/txtEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Edad de la mascota"
                android:text="Edad:"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"/> <!-- Espacio superior -->

            <!-- Vacunas de la mascota -->
            <TextView
                android:id="@+id/txtVacunas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Vacunas de la mascota"
                android:text="Vacunas:"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"/> <!-- Espacio superior -->

            <!-- Due침o de la mascota -->
            <TextView
                android:id="@+id/txtDueno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Nombre del due침o de la mascota"
                android:text="Due침o:"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"/> <!-- Espacio superior -->

            <!-- Veterinario de la mascota -->
            <TextView
                android:id="@+id/txtVeterinario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Nombre del veterinario de la mascota"
                android:text="Veterinario:"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"/> <!-- Espacio superior -->

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
