<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fondo_formpets"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nuevamascota"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="DuplicateIds" />

        <ImageButton
            android:id="@+id/btnAtras"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/bg_button_round_green"
            android:src="@drawable/abc_vector_test"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:contentDescription="Atr치s"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre de la mascota -->
        <EditText
            android:id="@+id/editNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre de la mascota"
            android:minHeight="48dp"
            android:background="@drawable/bg_edittext_rounded_white"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnAtras"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Edad de la mascota -->
        <EditText
            android:id="@+id/editEdad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Edad"
            android:inputType="number"
            android:minHeight="48dp"
            android:background="@drawable/bg_edittext_rounded_white"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/editNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Vacunas -->
        <EditText
            android:id="@+id/editVacunas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Vacunas (separadas por coma)"
            android:minHeight="48dp"
            android:background="@drawable/bg_edittext_rounded_white"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/editEdad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre del due침o -->
        <EditText
            android:id="@+id/editDueno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre del due침o"
            android:minHeight="48dp"
            android:background="@drawable/bg_edittext_rounded_white"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/editVacunas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre del veterinario -->
        <EditText
            android:id="@+id/editVeterinario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre del veterinario"
            android:minHeight="48dp"
            android:background="@drawable/bg_edittext_rounded_white"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/editDueno"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bot칩n para guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_rounded_corners_green"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Guardar Mascota"
            android:textColor="#FFFFFF"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editVeterinario"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
