<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la mascota"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edad de la mascota"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editVacunas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vacunas"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editDueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DueÃ±o de la mascota"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editVeterinario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Veterinario"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar" />
</LinearLayout>
